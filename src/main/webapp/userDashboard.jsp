<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>TV PSS Dashboard</title>
<link rel="stylesheet" type="text/css" href="css/userDashboard.css">
</head>
<body>
	<div class="sidebar">
		<div class="header-container">
			<img src="images/jata.png" alt="Logo" class="sidebar-logo">
			<div class="header-text">
				<h1>TV PSS</h1>
				<h6>
					Management <br> Information System
				</h6>
			</div>
		</div>
		<ul>
			<li>Dashboard</li>
			<li>Activity</li>
			<li>Contact</li>
			<li>Validation</li>
			<li>Log Out</li>
		</ul>
	</div>
	<div class="content">
		<h1>Welcome to TV PSS Dashboard!</h1>
		<div class="stats-container">
			<div class="stat-box yellow">
				<p>18,089</p>
				<h3>Students</h3>
			</div>
			<div class="stat-box green">
				<p>56</p>
				<h3>Schools</h3>
			</div>
			<div class="stat-box red">
				<p>234</p>
				<h3>Teachers</h3>
			</div>
		</div>
		<h2>Activity Overview</h2>
		<div class="activity-slider">
			<div class="activity-card">
				<img src="images/activity1.jpg" alt="Activity 1">
				<p>Activity Title 1</p>
			</div>
			<div class="activity-card">
				<img src="images/activity2.jpg" alt="Activity 2">
				<p>Activity Title 2</p>
			</div>
			<div class="activity-card">
				<img src="images/activity3.jpg" alt="Activity 3">
				<p>Activity Title 3</p>
			</div>
		</div>
	</div>
</body>
</html>
